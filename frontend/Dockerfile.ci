FROM node:18-alpine

WORKDIR /app

# Install dependencies with npm install instead of npm ci
COPY package*.json ./
RUN npm install

# Create necessary directories
RUN mkdir -p public .next

# Copy project files
COPY . .

# Build the application
RUN npm run build

# Expose the frontend port
EXPOSE 3000

# Run the application
CMD ["npm", "run", "start"] 